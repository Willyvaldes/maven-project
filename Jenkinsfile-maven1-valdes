pipeline {
    agent { 
        docker {
           label "docker" 
            image "devopseasylearning2021/valdes-apache:3.6.3"
           }
           }

   environment {
		DOCKERHUB_CREDENTIALS=credentials('dockerhub')
	}

    options { buildDiscarder(logRotator(artifactDaysToKeepStr: '',
     artifactNumToKeepStr: '', daysToKeepStr: '3', numToKeepStr: '5'))
      disableConcurrentBuilds() }
      

    stages {
        
       stage('Setup parameters') {
            steps {
                script { 
                    properties([
                        parameters([
                            string(
                                defaultValue: 'maven-valdes', 
                                name: 'BranchName', 
                                trim: true
                            ),

                            string(
                                defaultValue: '001', 
                                name: 'ImageTAG', 
                                trim: true
                            )
                        ])
                    ])
                }
            }
        }


        stage('cloning') {
            

            steps {
               sh '''
               rm -rf ./*
               git clone -b $BranchName https://github.com/Willyvaldes/maven-project.git
               cp -r maven-project/* .
               rm -rf maven-project/
               ls -l
               '''
            }
        }

        stage('clean') {
            agent {
                 docker { image 'devopseasylearning2021/valdes-apache:3.6.3' }
             }

            steps {
               sh '''
               rm -rf webapp/target/webapp.war || true
               ls -l
              mvn clean
               '''
            }
        }

        stage('compile') {
            agent {
                 docker { image 'devopseasylearning2021/valdes-apache:3.6.3' }
             }

            steps {
               sh '''
             mvn compile
               '''
            }
        }

stage('validate') {
    agent {
                 docker { image 'devopseasylearning2021/valdes-apache:3.6.3' }
             }

            steps {
               sh '''
               mvn validate
               '''
            }
        }



stage('test') {
    agent {
                 docker { image 'devopseasylearning2021/valdes-apache:3.6.3' }
             }

            steps {
               sh '''
             mvn test 
               '''
            }
        }

stage('package') {


            steps {
               sh '''
            mvn package
                 '''
                 }
        }

stage('verify') {
    agent {
                 docker { image 'devopseasylearning2021/valdes-apache:3.6.3' }
             }

            steps {
               sh '''
              mvn verify
               '''
            }
        }


stage('install') {
    agent {
                 docker { image 'devopseasylearning2021/valdes-apache:3.6.3' }
             }

            steps {
               sh '''
           mvn install
               '''
            }
        }
       
      



stage('build ') {

            steps {
               sh '''
           docker build -t devopseasylearning2021/valdes:$ImageTAG .
               '''
            }
        }
       





      stage('Docker Login') {

			steps {
				sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}

           
            

     stage('Docker push ') {
            steps {
               sh '''
              docker push devopseasylearning2021/valdes:$ImageTAG 
                '''
            }
        }


        stage('Deploy to docker ') {
            steps {
               sh '''
               docker rm -f checking || true
              docker run -d -p 8040:8080 devopseasylearning2021/valdes:$ImageTAG 
              curl ifconfig.co
                '''
            }
        }
    
    
    
    
    
    }











}
